  <generator>
    <database>
      <name>org.jooq.meta.mysql.MySQLDatabase</name>
      <includes>.*</includes>
      <excludes>
           UNUSED_TABLE                # This table (unqualified name) should not be generated
         | PREFIX_.*                   # Objects with a given prefix should not be generated
         | SECRET_SCHEMA\.SECRET_TABLE # This table (qualified name) should not be generated
         | SECRET_ROUTINE              # This routine (unqualified name) ...
      </excludes>
      <inputSchema>demo3_db</inputSchema>
      <forcedTypes>
	    <forcedType>
	      <userType>java.lang.Boolean</userType>
	      <converter>com.example.webapi.infrastructure.jooq.converter.BooleanConverter</converter>
	      <includeExpression>.*</includeExpression>
	    </forcedType>
	  </forcedTypes>
    </database>

    <generate>
    </generate>

    <target>
      <packageName>com.example.webapi.infrastructure.jooq</packageName>
      <directory>/Users/J10113/git/security-jwt-spring2-handmade/jooqgen/src</directory>
    </target>
  </generator>
