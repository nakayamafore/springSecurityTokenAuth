    <driver>com.mysql.cj.jdbc.Driver</driver>
    <url>jdbc:mysql://localhost:3306/demo3_db</url>
    <user>root</user>
    <password>10113-Xavi</password>
    <properties>
      <property><key>user</key><value>root</value></property>
